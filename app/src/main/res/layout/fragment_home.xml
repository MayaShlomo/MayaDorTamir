<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/design_default_color_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- כותרת ברוכים הבאים -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginBottom="32dp">

            <ImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@mipmap/ic_launcher"
                android:layout_marginBottom="16dp"
                android:contentDescription="@string/app_name" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/welcome_title"
                android:textSize="28sp"
                android:textStyle="bold"
                android:textColor="?attr/colorPrimary"
                android:gravity="center"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/welcome_subtitle"
                android:textSize="16sp"
                android:textColor="?attr/colorOnSurface"
                android:gravity="center"
                android:alpha="0.7" />

        </LinearLayout>

        <!-- כפתורי ניווט ראשיים -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="24dp">

            <!-- שורה ראשונה -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp">

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="4dp">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnMoviesList"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="@string/my_collection"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        app:icon="@drawable/ic_library_books"
                        app:iconGravity="top"
                        app:iconSize="32dp"
                        style="@style/Widget.Material3.Button.TextButton" />

                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="4dp">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnFavorites"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="@string/favorites"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        app:icon="@android:drawable/btn_star_big_on"
                        app:iconGravity="top"
                        app:iconSize="32dp"
                        style="@style/Widget.Material3.Button.TextButton" />

                </com.google.android.material.card.MaterialCardView>

            </LinearLayout>

            <!-- שורה שנייה -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp">

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="4dp">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnSearchOnline"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="@string/search_online"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        app:icon="@drawable/ic_search"
                        app:iconGravity="top"
                        app:iconSize="32dp"
                        style="@style/Widget.Material3.Button.TextButton" />

                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="4dp">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnAddMovie"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="@string/add_movie"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        app:icon="@drawable/ic_add"
                        app:iconGravity="top"
                        app:iconSize="32dp"
                        style="@style/Widget.Material3.Button.TextButton" />

                </com.google.android.material.card.MaterialCardView>

            </LinearLayout>

            <!-- שורה שלישית -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="4dp">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnStatistics"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="@string/statistics"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        app:icon="@drawable/ic_analytics"
                        app:iconGravity="top"
                        app:iconSize="32dp"
                        style="@style/Widget.Material3.Button.TextButton" />

                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="4dp">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnSettings"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="@string/settings"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        app:icon="@drawable/ic_settings"
                        app:iconGravity="top"
                        app:iconSize="32dp"
                        style="@style/Widget.Material3.Button.TextButton" />

                </com.google.android.material.card.MaterialCardView>

            </LinearLayout>

        </LinearLayout>

        <!-- מידע נוסף -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="8dp"
            app:cardElevation="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/quick_start_guide"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/quick_start_instructions"
                    android:textSize="14sp"
                    android:lineSpacingExtra="4dp" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>

</ScrollView>