<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- כותרת -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="24dp">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@mipmap/ic_launcher"
                android:layout_marginEnd="16dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/welcome_title"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:textColor="@color/white" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/welcome_subtitle"
                    android:textSize="14sp"
                    android:textColor="@color/text_secondary" />

            </LinearLayout>
        </LinearLayout>

        <!-- כפתורי ניווט -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="16dp">

            <!-- שורה ראשונה -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="12dp">

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    app:cardCornerRadius="8dp"
                    app:cardBackgroundColor="@color/dark_primary"
                    app:cardElevation="4dp">

                    <Button
                        android:id="@+id/btnMoviesList"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="@string/my_collection"
                        android:textColor="@color/white"
                        android:background="?attr/selectableItemBackground"
                        android:drawableTop="@drawable/ic_library_books"
                        android:paddingTop="16dp" />

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    app:cardCornerRadius="8dp"
                    app:cardBackgroundColor="@color/dark_primary"
                    app:cardElevation="4dp">

                    <Button
                        android:id="@+id/btnFavorites"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="@string/favorites"
                        android:textColor="@color/white"
                        android:background="?attr/selectableItemBackground"
                        android:drawableTop="@android:drawable/btn_star_big_on"
                        android:drawableTint="@color/gold"
                        android:paddingTop="16dp" />

                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <!-- שורה שנייה -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="12dp">

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    app:cardCornerRadius="8dp"
                    app:cardBackgroundColor="@color/dark_primary"
                    app:cardElevation="4dp">

                    <Button
                        android:id="@+id/btnSearchOnline"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="@string/search_online"
                        android:textColor="@color/white"
                        android:background="?attr/selectableItemBackground"
                        android:drawableTop="@drawable/ic_search"
                        android:paddingTop="16dp" />

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    app:cardCornerRadius="8dp"
                    app:cardBackgroundColor="@color/dark_primary"
                    app:cardElevation="4dp">

                    <Button
                        android:id="@+id/btnAddMovie"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="@string/add_movie"
                        android:textColor="@color/white"
                        android:background="?attr/selectableItemBackground"
                        android:drawableTop="@drawable/ic_add"
                        android:paddingTop="16dp" />

                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <!-- שורה שלישית -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    app:cardCornerRadius="8dp"
                    app:cardBackgroundColor="@color/dark_primary"
                    app:cardElevation="4dp">

                    <Button
                        android:id="@+id/btnStatistics"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="@string/statistics"
                        android:textColor="@color/white"
                        android:background="?attr/selectableItemBackground"
                        android:drawableTop="@drawable/ic_analytics"
                        android:paddingTop="16dp" />

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    app:cardCornerRadius="8dp"
                    app:cardBackgroundColor="@color/dark_primary"
                    app:cardElevation="4dp">

                    <Button
                        android:id="@+id/btnSettings"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="@string/settings"
                        android:textColor="@color/white"
                        android:background="?attr/selectableItemBackground"
                        android:drawableTop="@drawable/ic_settings"
                        android:paddingTop="16dp" />

                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </LinearLayout>

        <!-- הוראות מהירות -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/dark_surface"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/quick_start_guide"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/quick_start_instructions"
                    android:textSize="14sp"
                    android:textColor="@color/text_secondary"
                    android:lineSpacingExtra="2dp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</ScrollView>