<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="12dp"
    app:cardCornerRadius="16dp"
    app:cardBackgroundColor="@color/dark_surface"
    app:cardElevation="6dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- Header Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp">

            <!-- Cinema Image -->
            <ImageView
                android:id="@+id/ivCinemaImage"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_cinema"
                android:background="@drawable/rounded_image_background"
                android:layout_marginEnd="16dp" />

            <!-- Cinema Info Column -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <!-- Name and Status Row -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:id="@+id/tvCinemaName"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Cinema Name"
                        android:textColor="@color/white"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:lineSpacingExtra="2dp"
                        android:layout_marginEnd="12dp"
                        tools:text="住 住 转 " />

                    <TextView
                        android:id="@+id/tvStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/open"
                        android:textColor="@color/success_green"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:background="@drawable/status_background"
                        android:paddingHorizontal="8dp"
                        android:paddingVertical="4dp"
                        android:minWidth="60dp"
                        android:gravity="center" />

                </LinearLayout>

                <!-- Address -->
                <TextView
                    android:id="@+id/tvCinemaAddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Cinema Address"
                    android:textColor="@color/text_secondary"
                    android:textSize="14sp"
                    android:lineSpacingExtra="2dp"
                    android:layout_marginBottom="12dp"
                    tools:text="拽 转, 专   71, 转  驻" />

                <!-- Distance and Rating -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <!-- Distance Chip -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:background="@drawable/info_chip_background"
                        android:paddingHorizontal="10dp"
                        android:paddingVertical="6dp"
                        android:layout_marginEnd="12dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textSize="12sp"
                            android:layout_marginEnd="4dp" />

                        <TextView
                            android:id="@+id/tvDistance"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2.5 km"
                            android:textColor="@color/info_blue"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            tools:text="2.5 km" />

                    </LinearLayout>

                    <!-- Rating Chip -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingHorizontal="10dp"
                        android:paddingVertical="6dp">

                        <RatingBar
                            android:id="@+id/ratingBar"
                            style="?android:attr/ratingBarStyleSmall"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:numStars="5"
                            android:stepSize="0.1"
                            android:isIndicator="true"
                            android:progressTint="@color/gold"
                            android:scaleX="0.8"
                            android:scaleY="0.8"
                            android:layout_marginEnd="4dp"
                            tools:rating="4.2" />

                        <TextView
                            android:id="@+id/tvRatingValue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="4.2"
                            android:textColor="@color/gold"
                            android:textSize="12sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:baselineAligned="false">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnNavigate"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:layout_marginEnd="6dp"
                android:text="@string/navigate"
                android:textSize="12sp"
                android:textColor="@color/white"
                android:backgroundTint="@color/purple_500"
                android:gravity="center"
                android:maxLines="1"
                android:ellipsize="end"
                app:cornerRadius="12dp"
                app:icon="@drawable/ic_navigation"
                app:iconSize="16dp"
                app:iconTint="@color/white"
                app:iconGravity="textStart" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnCall"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:layout_marginHorizontal="3dp"
                android:text="@string/call"
                android:textSize="12sp"
                android:textColor="@color/white"
                android:backgroundTint="@color/success_green"
                android:gravity="center"
                android:maxLines="1"
                android:ellipsize="end"
                app:cornerRadius="12dp"
                app:icon="@drawable/ic_call"
                app:iconSize="16dp"
                app:iconTint="@color/white"
                app:iconGravity="textStart" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnViewDetails"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:layout_marginStart="6dp"
                android:text="@string/details"
                android:textSize="12sp"
                android:textColor="@color/white"
                android:backgroundTint="@color/info_blue"
                android:gravity="center"
                android:maxLines="1"
                android:ellipsize="end"
                app:cornerRadius="12dp"
                app:icon="@drawable/ic_info"
                app:iconSize="16dp"
                app:iconTint="@color/white"
                app:iconGravity="textStart" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>